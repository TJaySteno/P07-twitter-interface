.grid-33
  .app--section
    ul.app--user--list
      each user in profile.following
        li
          .circle--fluid
            .circle--fluid--cell.circle--fluid--primary
              a.app--tweet--author
                .app--avatar(style=`background-image: url(${user.profile_image_url})`)
                h4= user.name
                p= user.screen_name
            .circle--fluid--cell
              if user.following
                a.button Follow
              else
                a.button.button-text Unfollow
